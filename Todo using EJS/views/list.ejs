    <!-- showing weekends and weekdays in different color -->
    <% if(kindOfDay==="Saturday" || kindOfDay ==="Sunday") {
    %>
    <h1 style="color : violet">It's a <%= kindOfDay %></h1>
    <%  }else { %>
        
        <h1 style="color : green">It's a <%= kindOfDay %></h1>
        <% } %>
</body>
</html>